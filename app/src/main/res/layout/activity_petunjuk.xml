<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="@drawable/back9"
    tools:context="glory.hafalandoaanakmuslim.PetunjukActivity"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="glory.hafalandoaanakmuslim.PetunjukActivity"
    >

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Petunjuk"
        android:textColor="#0B6121"
        android:id="@+id/txtjudulAbout"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:layout_below="@+id/toolbar"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tombol Doa"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelPetunjuk"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/txtjudulAbout"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelDoa"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/txtpenjelPetunjuk"
        android:layout_marginLeft="12dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tombol Contact"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelPetunjukContact"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/txtpenjelDoa"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelContact"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/txtpenjelPetunjukContact"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tombol Alarm"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelPetunjukAlarm"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/txtpenjelContact"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelAlarm"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/txtpenjelPetunjukAlarm"
        android:layout_marginLeft="12dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tombol Evaluasi"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelPetunjukEvaluasi"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:layout_below="@+id/txtpenjelAlarm"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Penjelasan"
        android:textColor="#0B6121"
        android:id="@+id/txtpenjelEvaluasi"
        android:layout_marginTop="20dp"
        android:textSize="15sp"
        android:layout_below="@+id/txtpenjelPetunjukEvaluasi"
        android:layout_marginLeft="12dp"
        />

</RelativeLayout>
</ScrollView>