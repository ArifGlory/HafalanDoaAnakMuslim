<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="glory.hafalandoaanakmuslim.EvaluasiActivity"
    android:background="#FAFAFA">

    <include
        android:id="@+id/toolbar"
        layout="@layout/layout_toolbar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User : "
        android:id="@+id/txtUser"
        android:textSize="15sp"
        android:textStyle="italic"
        android:textColor="#0B6121"
        android:layout_below="@+id/toolbar"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="- Evaluasi - "
        android:textSize="25sp"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:id="@+id/txtjudulEva"
        android:textColor="#0B6121"
        android:layout_below="@+id/txtUser"

        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/txtjudulEva"
        android:layout_marginTop="25dp"
        android:id="@+id/lineSoal"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtSoaleva1"
            android:text="Ini untuk txt Soal"
            android:textSize="15dp"
            android:textColor="#0B6121"
            />
    </LinearLayout>

    <ImageView
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/gmbrSoal"
        android:layout_below="@+id/lineSoal"
        android:scaleType="fitCenter"
        android:src="@drawable/tanya"
        android:onClick="gmbrKlik"

        />

    <Button
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/btnA"
        android:layout_below="@+id/gmbrSoal"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:text="A"
        android:onClick="btnklikA"

        />


    <Button
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/btnB"
        android:layout_below="@+id/gmbrSoal"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:text="B"
        android:onClick="btnklikB"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/linejawaban"
        android:layout_below="@id/btnA"
        android:layout_marginTop="10dp"
        >
    </LinearLayout>



    <Button
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/btnC"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/linejawaban"
        android:text="C"
        android:onClick="btnklikC"
        />
    <Button
        android:layout_width="130dp"
        android:layout_height="70dp"
        android:id="@+id/btnD"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/linejawaban"
        android:layout_alignParentEnd="true"
        android:text="D"
        android:onClick="btnklikD"

        />

</RelativeLayout>
